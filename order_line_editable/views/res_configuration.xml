<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="res_config_settings_editable_order_view_form" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.inherit.order.line.editable</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="base.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[hasclass('settings')]" position="inside">
                    <div class="app_settings_block" data-string="Order Line Editable" string="Order Line Editable"
                         data-key="order_line_editable">
                        <h2>General Settings</h2>
                        <div class="row mt16 o_settings_container" name="order_line_editable_setting_container">
                            <div class="col-12 col-lg-6 o_setting_box" id="variant_options">
                                <div class="o_setting_left_pane">
                                    <field name="group_order_line_editable"/>
                                </div>
                                <div class="o_setting_right_pane">
                                    <label for="group_order_line_editable"/>
                                    <div class="text-muted">
                                        Allows order line editable top in sales order.
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
